@model ShoppingCart
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    int numOfQuantity = 1;
}

<h2>My Shopping Cart</h2>

<table class="table">
    <tr>
        <th>Decribe</th>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
    </tr>
    @foreach(var item in Model.Items)
    {
        <tr>
            <td><img src="@item.ImageUrl" alt="" class="img-thumbnail" style="width: 100px; height: auto;"></td>    
            <td>@item.Name</td>
            <td><input type="number" id="quantity" name="quantity" value="@item.Quantity" /></td>
            <td>@item.Price</td> 
            <td>@(item.Price * item.Quantity)</td> 
            <td>
                <a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId"><button type="submit" class="btn btn-danger">Remove</button></a>
            </td> 
        </tr>
    }
</table>
<button type="submit" class="btn btn-info"><a href="/ShoppingCart/Checkout" style="text-decoration:none">Checkout</a></button>

<button type="submit" class="btn btn-danger"><a href="/Home/IndexItem" style="text-decoration:none">Back to List</a></button>